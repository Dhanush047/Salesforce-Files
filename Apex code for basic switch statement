public class basic 
{
    public static void base()
    {
        String Gender = 'Male';
        
        switch on Gender
        {
            when 'Male'
            {
                system.debug('The Gender is Male');
            }
            when 'Female'
            {
                system.debug('The Gender is Female');
            }
            when else
            {
                system.debug('Enter proper gender');
            }
        }
    }
    
}
